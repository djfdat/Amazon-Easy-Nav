{
	"manifest_version": 3,
	"name": "Amazon Easy Nav",
	"description": "Adds links to the Amazon Nav Bar to take you to pages that you frequently want but Amazon makes it extremely difficult to find naturally. Specifcally the Returns Page and the Support Call page.",
	"version": "1.0.0",
	"browser_specific_settings": {
		"gecko": {
			"id": "djfdat@gmail.com"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.amazon.ae/*",
				"*://*.amazon.ca/*",
				"*://*.amazon.cn/*",
				"*://*.amazon.co.jp/*",
				"*://*.amazon.co.uk/*",
				"*://*.amazon.com/*",
				"*://*.amazon.com.au/*",
				"*://*.amazon.com.be/*",
				"*://*.amazon.com.br/*",
				"*://*.amazon.com.tr/*",
				"*://*.amazon.com.mx/*",
				"*://*.amazon.de/*",
				"*://*.amazon.es/*",
				"*://*.amazon.eg/*",
				"*://*.amazon.fr/*",
				"*://*.amazon.in/*",
				"*://*.amazon.it/*",
				"*://*.amazon.nl/*",
				"*://*.amazon.pl/*",
				"*://*.amazon.sa/*",
				"*://*.amazon.se/*",
				"*://*.amazon.sg/*"
			],
			"js": [
				"arin.js"
			]
		}
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"permissions": [
		"storage"
	]
}